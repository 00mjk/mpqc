#/usr/bin/env perl

$srcdir = shift @ARGV;
@sources = @ARGV;

foreach my $i (@sources) {
    open(IN,"<$srcdir/$i");
    open(OUT,">$srcdir/$i.tmp");
    while (<IN>) {
        if (!/^\/\/ xml-url/) {
            print OUT "$_";
        }
    }
    close(IN);
    close(OUT);
    rename "$srcdir/$i.tmp", "$srcdir/$i";
}
