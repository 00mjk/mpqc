cmake_minimum_required(VERSION 3.0)

# Import MPQC package
# 1. since using MPQC main, require MPQCmain
# 2. remove/replace libmpqc if don't need the full MPQC functionality
set(mpqc_root_dir "@CMAKE_INSTALL_PREFIX@")
find_package(mpqc @MADNESS_VERSION@ CONFIG QUIET REQUIRED COMPONENTS MPQCmain libmpqc HINTS ${mpqc_root_dir})

set(program mp2)
set(sources ${program}.cpp)
add_executable(${program} EXCLUDE_FROM_ALL ${sources})

# mp2 uses MPQC main; it also links in all classes that the MPQC executable links in
target_link_libraries(${program} MPQCmain libmpqc)
