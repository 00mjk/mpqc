mpqc: (
  checkpoint = no
  savestate = no
  do_energy = yes
  mole<LMP2>: (
    distance_threshold = 8.0
    value_accuracy = 1e-6
    basis = $:basis
    molecule = $:molecule
    max_iter = 20
    nfzc = auto
    reference<CLHF>: (
      orthog_method = symmetric
      molecule = $:molecule
      basis = $:basis
      memory = 150000000
      guess_wavefunction<CLHF>: (
        molecule = $:molecule
        basis<GaussianBasisSet>: (
          molecule = $:molecule
          name = "STO-3G"
