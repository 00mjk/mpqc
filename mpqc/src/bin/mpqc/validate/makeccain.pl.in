#!/usr/bin/env perl
#eval 'exec perl $0 $*'
#    if 0;

$libsc = "@sclibdir@/cca";
$libgeneric = "@CCA_CHEM_LIB@";

foreach (@ARGV) {

  chomp;
  open INPUT,"<$_";
  $_ =~ s/\.in//;
  open OUTPUT,">$_.out";

  while (<INPUT>) {
    $line = $_;
    $line = s/%LIBSC%/$libsc/;
    $line = s/%LIBGENERIC%/$libgeneric/;
    print OUTPUT "$_";
  }

  close INPUT;
  close OUTPUT;
}
