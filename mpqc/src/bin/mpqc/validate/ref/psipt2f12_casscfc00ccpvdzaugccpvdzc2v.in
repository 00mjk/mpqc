% Emacs should use -*- KeyVal -*- mode
molecule<Molecule>: (
  unit = angstrom
  {atoms geometry} = {
    H   [ 0.0 0.0 0.0 ]
    F   [ 0.0 0.0 0.916808 ]
  }
  symmetry = auto
)

mbasis<GaussianBasisSet>: (
  name = "6-31G"
  puream = true
  molecule = $:molecule
)
basis<SplitBasisSet>: (
  basis = $:mbasis
)

mvbasis<GaussianBasisSet>: (
  name = "STO-3G"
  molecule = $:molecule
)
vbasis<SplitBasisSet>: (
  basis = $:mvbasis
)

% unfortunately, Psi3 cannot write scratch files to the current directory
psienv<PsiExEnv>: (
  nscratch = 1
  scratch = [ "/tmp/" ]
)

mpqc: (
  checkpoint = no
  savestate = no
  restart = no
  integrals<IntegralLibint2>: ()
  do_energy = yes
  do_gradient = no
  % method for computing the molecule's energy
  mole<PT2R12>: (
    value_accuracy = 1e-11
    molecule = $:molecule
    basis = $:basis
    memory = 32000000

    nfzc = 0
    omit_uocc = false

    reference<PsiCI>: (
      molecule = $:molecule
      basis = $:basis
      psienv = $:psienv
      memory = 32000000

      reference<PsiCLHF>: (
        molecule = $:molecule
        basis = $:basis
        docc = [3 0 1 1]
        psienv = $:psienv
      )

      value_accuracy = 1e-11
      nfzc = 1
      ex_lvl = 10
      ras1 = [0 0 0 0]
      ras2 = [3 0 1 1]
      ras3_max = 0
      rasscf = true
      detcas_detci_maxiter = 12
      reorder = after
      root = 1
      num_roots = 2
      h0_blocksize = 1000
      detci_energy_convergence = 7
      detci_convergence = 4
      detcas_energy_convergence = 7
      detcas_convergence = 4
      detcas_detci_energy_convergence = 9
      detcas_detci_convergence = 4

      valence_obwfn<CLHF>: (
        molecule = $:molecule
        basis = $:vbasis
        docc = [3 0 1 1]
      )
    )

    rdm2<PsiRDMTwo>: (
      wfn = $..:reference
    )

    stdapprox = C
    corr_factor = stg-3g
    corr_param = 1.5
    integrals<IntegralLibint2>: ()
    aux_basis<GaussianBasisSet>: (
      name = "aug-cc-pVDZ"
      molecule = $:molecule
    )
    df_basis<GaussianBasisSet>: (
      name = "cc-pVTZ-RI"
      molecule = $:molecule
    )
    abs_method = cabs+
  )
  optimize = no
)

