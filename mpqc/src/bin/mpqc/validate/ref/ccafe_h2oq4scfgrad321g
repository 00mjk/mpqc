#!ccaffeine bootstrap file. 
# ------- don't change anything ABOVE this line.-------------
path set %LIBGENERIC%
path append %LIBSC%

repository get-global Chemistry.MoleculeFactory
repository get-global MPQC.ModelFactory
repository get-global MPQC.SimpleDriver

create Chemistry.MoleculeFactory molfactory
create MPQC.ModelFactory mpqcfactory
create MPQC.SimpleDriver driver

connect driver ModelFactoryInterface mpqcfactory ModelFactoryInterface
connect mpqcfactory MoleculeFactoryInterface molfactory MoleculeFactoryInterface

parameter mpqcfactory CONFIG basis 3-21G*
parameter mpqcfactory CONFIG theory HF
parameter mpqcfactory CONFIG molecule_filename %SCREF%/ccafe_h2oq4.xyz
parameter driver CONFIG do_gradient 1

go driver go

disconnect driver ModelFactoryInterface mpqcfactory ModelFactoryInterface
disconnect mpqcfactory MoleculeFactoryInterface molfactory MoleculeFactoryInterface

remove molfactory
remove mpqcfactory
remove driver

exit
