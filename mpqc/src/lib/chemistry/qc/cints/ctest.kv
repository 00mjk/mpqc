
molecule = $:water

basis<SymmGaussianBasisSet>: (
  molecule = $:molecule
  %name = "STO-3G"
  %name = "6-31G"
  %name = "DZ (Dunning)"
  %name = "6-31G*"
  %name = "6-31G**"
  %name = "DZP (Dunning)"
  %name = "cc-pVDZ"
  %name = "cc-pVTZ"
  %name = "cc-pVQZ"
  %name = "aug-cc-pVDZ"
  %name = "aug-cc-pVTZ"
  name = "aug-cc-pVQZ"
)

c1water<Molecule>: (
  { atoms geometry } = {
      H    [   1.5  0.0   1.0 ]
      O    [   0.0  0.0   0.0 ]
      H    [  -1.5  0.0   1.0 ]
  }
)

water<Molecule>: (
  symmetry = c2v
  { atoms geometry } = {
      O    [   0.0  0.0   0.0 ]
      O    [   1.5  0.0   1.0 ]
  }
)

sodium<Molecule>: (
  { atoms geometry } = { Na [ 0 0 0 ] }
)

