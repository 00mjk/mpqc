#!/bin/sh

# usage: prepend file string1 ... stringn 
#

if [ $# -lt ]; then 
  echo incorrect usage ; exit 1;
fi

FILE=$1
shift

TMP=/tmp/prepend.$$

if [ ! -r $FILE ]; then
  echo file $FILE not found
  exit 1
fi

while [ $# != 0 ]; do
  echo "$1" >> $TMP 2>&1
  shift
done

cat $FILE >> $TMP

cp -f $TMP $FILE

rm -f $TMP

