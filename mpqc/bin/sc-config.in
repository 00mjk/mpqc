#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
LIBSUF=@LIBSUF@
exec_prefix_set=no
libs="@LIBS@"
all_sclibs="@SCLIBS@"
cppdefines="@DEFS@ @EXTRADEFINES@"
cxxflags="@CXXFLAGS@"
cflags="@CFLAGS@"
cxx="@CXX@"
cc="@CC@"

sclibs=""
for i in $all_sclibs; do
  if [ -f $libdir/$i ]; then
    li=`echo $i | sed "s/^lib\([a-zA-Z0-9]*\).$LIBSUF/-l\1/g"`
    sclibs="$sclibs $li"
  fi
done

usage="\
Usage: sc-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--libs] [--cppflags] [--cc] [--cflags] [--cxx] [--cxxflags]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

if test ${prefix}/include != /usr/include ; then
  includes=-I${prefix}/include
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo pre-1.2 experimental
      ;;
    --cppflags)
      echo $includes
      ;;
    --cflags)
      echo $cflags
      ;;
    --cxxflags)
      echo $cxxflags
      ;;
    --cc)
      echo $cc
      ;;
    --cxx)
      echo $cxx
      ;;
    --libs)
      echo -L${libdir} $sclibs $libs
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done

