
default::
	for dir in $(SUBDIRS); \
	  do \
	    (cd $${dir}; $(MAKE)); \
	  done

ifndef DODEPEND
DODEPENDOPT = "DODEPEND=no"
endif

clean::
	for dir in $(SUBDIRS); \
	  do \
	    (cd $${dir}; $(MAKE) $(DODEPENDOPT) clean); \
	  done

dclean::
	for dir in $(SUBDIRS); \
	  do \
	    (cd $${dir}; $(MAKE) $(DODEPENDOPT) dclean); \
	  done

distclean::
	for dir in $(SUBDIRS); \
	  do \
	    (cd $${dir}; $(MAKE) $(DODEPENDOPT) distclean); \
	  done
