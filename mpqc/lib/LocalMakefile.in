# Emacs should use -*- Makefile -*- mode.

host = @host@
host_cpu = @host_cpu@
host_vendor = @host_vendor@
host_os = @host_os@

target = @target@
target_cpu = @target_cpu@
target_vendor = @target_vendor@
target_os = @target_os@

# The object code suffix
OBJSUF = @OBJSUF@

# The library suffix
LIBSUF = @LIBSUF@

# The suffix generated by the -M compiler option
CCDEPENDSUF = @CCDEPENDSUF@
CXXDEPENDSUF = @CXXDEPENDSUF@
CCDEPENDFLAGS = @CCDEPENDFLAGS@
CXXDEPENDFLAGS = @CXXDEPENDFLAGS@

CC  = @CC@
CXX = @CXX@

AR = @AR@
ARFLAGS = r

LD = $(CXX)
LDFLAGS = @LDFLAGS@

INSTALL = @INSTALL@
INSTALLDIROPT = -d -m 0755
INSTALLLIBOPT = -m 0644
INSTALLBINOPT = -m 0755
INSTALLSCRIPTOPT = -m 0755

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
libdir=@libdir@
includedir=@includedir@

FLEX = @FLEX@
BISON = @BISON@
RANLIB = @RANLIB@
PERL = @PERL@
NIAMACFG = @NIAMACFG@
TMPL2MACDEP = $(SRCTOPDIR)/bin/tmpl2mac.pl
TMPL2MAC = $(PERL) $(TMPL2MACDEP)
COMPRESS = gzip
UNCOMPRESS = gzip -d
LISTLIBS= $(PERL) $(SRCTOPDIR)/bin/listlibs.pl -DLIBSUF=$(LIBSUF)
MKF77SYM= $(PERL) $(TOPDIR)/bin/mkf77sym.pl

# first check for generated include files in the machine dependent directories
# and then for include files in the src directory
INCLUDE = -I$(TOPDIR)/src/lib -I$(SRCTOPDIR)/include -I$(SRCTOPDIR)/src/lib \
	  @CPPFLAGS@
DEFINES = @DEFS@ @EXTRADEFINES@

CPPFLAGS = $(DEFINES) $(INCLUDE)

CFLAGS = @CFLAGS@
HIGHOPT_CFLAGS = $(CFLAGS)
NOALIAS_CFLAGS =

CXXFLAGS = @CXXFLAGS@
HIGHOPT_CXXFLAGS = $(CXXFLAGS)
NOALIAS_CXXFLAGS = $(NOALIAS_CFLAGS)

ELF = @ELF@
ELF_MAJOR = @ELF_MAJOR@
ELF_MINOR = @ELF_MINOR@
SH_LD = @SH_LD@
SH_LDFLAGS = @SH_LDFLAGS@

HAVE_SYSV_IPC = @HAVE_SYSV_IPC@
HAVE_ALPHA_MMAP = @HAVE_ALPHA_MMAP@
HAVE_HRECV = @HAVE_HRECV@
HAVE_NX = @HAVE_NX@
HAVE_PVM = @HAVE_PVM@
HAVE_MPI = @HAVE_MPI@
HAVE_MPL = @HAVE_MPL@
HAVE_P4 = @HAVE_P4@
HAVE_PUMA_MPI2 = @HAVE_PUMA_MPI2@
HAVE_MPI2_ONE_SIDED = @HAVE_MPI2_ONE_SIDED@
HAVE_PTHREAD = @HAVE_PTHREAD@
HAVE_PERF = @HAVE_PERF@

SYSLIBS = @LIBS@ @FLIBS@
