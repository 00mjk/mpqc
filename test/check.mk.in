	@for o in $(SYMM3OUTPUTS); \
	do ( \
	  expect=`echo $${o}|sed 's/^.*symm3_.*_\(.*\)_.*$$/\1/'`; \
	  actual=`grep 'g point g' $${o}|sed 's/^.*to \(.*\)$$/\1/'`; \
	  echo $${o}: expected $${expect} got $${actual}; \
	); done

